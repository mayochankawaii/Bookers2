<% user.each do |user| %>
<% book.each do |book| %>

<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>
	    <h2>User info</h2>
	    <table class='table'>
	      <tr>
	        <%= image_tag user.get_profile_image(100,100) %>
	      </tr>
	      <tr>
	        <th>name</th>
	        <th><%= user.name %></th>
	      </tr>
	      <tr>
	        <th>introduction</th>
	        <th><%= user.introduction %></th>
	      </tr>
	    </table>
	    <div class='row'>
	      <%= link_to edit_user_path, class:"nav-link text-light" do %>
          <i class="fa-solid fa-link"></i> 編集リンク
        <% end %>
	    </div>
	    <h2 class="mt-3">New book</h2>

<% if book.errors.any? %>
  <%= book.errors.count %> errors prohibited this book from being saved
  <ul>
    <% book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!-- form_with部分 -->
<%= form_with model: book do |f| %>

<div class="field">
  <h4>Title</h4>
  <%= f.text_field :title %>
</div>
<div class="field">
  <h4>Opinion</h4>
  <%= f.text_area :body %>
</div>

  <Div Align="left"><%= f.submit 'Create Book' %></Div>

<% end %>
	  </div>
