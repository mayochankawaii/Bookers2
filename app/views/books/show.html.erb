<%= render 'users/left', user: @user %>

	  <div class='col-md-8 offset-md-1'>
	    <h2>Book detail</h2>
	    <div>
		    <table class='table table-hover table-inverse'>
		      <tbody>
		      	<tr>
						  <td><%= image_tag @user.get_profile_image(100,100) %><p><%= link_to @user.name, user_path(@user) %></p></td>
						  <td><%= link_to @book.title, book_path(@book) %></td>
						  <td><%= @book.body %></td>
						  <td><% if @book.user == current_user %> <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %></td>
						  <td><%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger" %> <% end %></td>
						</tr>
				  </tbody>
		    </table>
			</div>
	  </div>
	</div>
</div>