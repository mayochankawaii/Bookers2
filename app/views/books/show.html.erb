<%= flash[:notice] %>
<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>
	    <h2>User info</h2>
	    <table class='table'>
	      <tr>
	        <%= image_tag @user.get_profile_image(100,100) %>
	      </tr>
	      <tr>
	        <th>name</th>
	        <th><%= @user.name %></th>
	      </tr>
	      <tr>
	        <th>introduction</th>
	        <th><%= @user.introduction %></th>
	      </tr>
	    </table>
	    <div class='row'>
	      <%= link_to edit_user_path, class:"nav-link text-light" do %>
          <i class="fa-solid fa-link"></i> 編集リンク
        <% end %>
	    </div>
	    <h2 class="mt-3">New book</h2>
	    <%= render 'users/newbook',book: @book %>
	  </div>
	  <div class='col-md-8 offset-md-1'>
	    <!--ここまで部分テンプレート化予定-->

	    <h2>Book detail</h2>
	    <div>
	    <table class='table table-hover table-inverse'>
	      <tbody><% @books.each do |book| %>
	      	<tr>
			  <td><%= image_tag @user.get_profile_image(100,100) %><p><%= link_to @user.name, user_path %></p></td>
			  <td><%= link_to book.title, book_path(book) %></td>
			  <td><%= book.body %></td>
			  <td><%= link_to "Edit", edit_book_path %></td>
			  <td><% if @book.user == current_user %> <%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に消しますか？" %> <% end %></td>
			</tr><% end %>
		  </tbody>
	    </table>
		</div>
	  </div>
	</div>
</div>