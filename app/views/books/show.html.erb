<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>
	    <h2>User info</h2>
	    <table class='table'>
	      <tr>
	        <%= image_tag @user.get_profile_image(100,100) %>
	      </tr>
	      <tr>
	        <th>name</th>
	        <th><%= @user.name %></th>
	      </tr>
	      <tr>
	        <th>introduction</th>
	        <th><%= @user.introduction %></th>
	      </tr>
	    </table>
	    <div class='row'>
	      <%= link_to edit_user_path, class:"nav-link text-light" do %>
          <i class="fa-solid fa-link"></i> 編集リンク
        <% end %>
	    </div>
	    <h2 class="mt-3">New book</h2>
	    <%= render 'users/newbook',book: @book %>
	  </div>
	  <div class='col-md-8 offset-md-1'>
	    <!--ここまで部分テンプレート化予定-->
	    
	    <h2>Book detail</h2>
	    <!-- 投稿した書籍一覧表示を作成しましょう。 -->
	    <% @books.each do |book| %>
	      <div>
	    <table class='table table-hover table-inverse'>
	      <tbody>
	      	<tr>
			    <td><%= image_tag @user.get_profile_image(100,100) %></td>
			    <td><%= link_to book.title, book_path %></td>
			    <td><%= book.body %></td>
			    <td><%= link_to "Edit", edit_book_path %></td>
			    <td><%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に消しますか？" %></td>
			    </tr>
			  </tbody>
	    </table>
			  </div>
				 <% end %>
	  </div>
	</div>
</div>