<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>
	    <h2>User info</h2>
	    <table class='table'>
	      <tr>
	        <%= image_tag @user.get_profile_image(100,100) %>
	      </tr>
	      <tr>
	        <th>name</th>
	        <th><%= @user.name %></th>
	      </tr>
	      <tr>
	        <th>introduction</th>
	        <th><%= @user.introduction %></th>
	      </tr>
	    </table>
	    <div class='row'>
	      <%= link_to edit_user_path, class:"nav-link text-light" do %>
          <i class="fa-solid fa-link"></i> 編集リンク
        <% end %>
	    </div>
	    <h2 class="mt-3">New book</h2>
	    <%= render 'users/newbook',book: @book %>
	  </div>
	  <div class='col-md-8 offset-md-1'>
	    <h2>Books</h2>
	    <!-- 投稿した書籍一覧表示を作成しましょう。 -->
	    <table class='table table-hover table-inverse'>
	      <thead>
	        <tr>
	          <th></th>
	          <th>Title</th>
	          <th>Opinion</th>
	          <th colspan="3"></th>
	        </tr>
	      </thead>
	      <tbody></tbody>
	    </table>
	  </div>
	</div>
</div>