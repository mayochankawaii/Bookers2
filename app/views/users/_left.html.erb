<div>
  <%= flash[:notice] %>
</div>

<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>
	    <h2>User info</h2>
	    <table class='table'>
	      <tr>
	        <%= image_tag user.get_profile_image(100,100) %>
	      </tr>
	      <tr>
	        <th>name</th>
	        <th><%= user.name %></th>
	      </tr>
	      <tr>
	        <th>introduction</th>
	        <th><%= user.introduction %></th>
	      </tr>
	    </table>
	    <div class='row'>
	      <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
	    </div>
	    <h2 class="mt-3">New book</h2>
	    <!-- form_with部分 -->
		<%= form_with model: Book.new do |f| %>
		  <div class="field">
		    <label>Title</label>
		    <p><%= f.text_field :title %></p>
		  </div>
		  <div class="field">
		    <label>Opinion</label>
		    <p><%= f.text_area :body %></p>
		  </div>
		    <Div Align="left"><%= f.submit 'Create Book', class: "btn btn-success" %></Div>
		  <% end %>
	  </div>